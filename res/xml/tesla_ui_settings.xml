<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/tesla_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

            <!-- Lockscreen -->
            <PreferenceScreen
                  android:key="lockscreen_tesla"
                  android:fragment="com.android.settings.tesla.LockScreenSettings"
                  android:title="@string/tesla_lockscreen_title" />

            <!-- Statusbar -->
            <PreferenceScreen
                  android:key="statusbar_tesla"
                  android:fragment="com.android.settings.tesla.StatusBarSettings"
                  android:title="@string/tesla_statusbar_title" />

            <!-- Navigation -->
            <PreferenceScreen
                  android:key="nav_tesla"
                  android:fragment="com.android.settings.tesla.NavigationSettings"
                  android:title="@string/tesla_nav_title" />

            <!-- Others -->
            <PreferenceScreen
                  android:key="others_tesla"
                  android:fragment="com.android.settings.tesla.OthersSettings"
                 android:title="@string/tesla_others_title" />

</PreferenceScreen>
